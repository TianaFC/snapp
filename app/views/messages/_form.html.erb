<%= form_for @message, url: new_user_message_path do |f| %>
  <% if @message.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@message.errors.count, "error") %> Prohibited this message from being sent:</h2>
    <ul>
    <% @message.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>
  
  <div class="form-group">
    <h4>
      <%= f.label :subject %>
    </h4>
    <%= f.text_field :subject, class: "form-control", placeholder: "Message Subject"%>
  </div>
 
  <div class="form-group">
    <h4><%= f.label :text %></h4>
    <%= f.text_area :text, class: "form-control", placeholder: "Message Body" %>
  </div>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>