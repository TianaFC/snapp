<p id="notice"><%= notice %></p>

<%= render :partial => @answers %>

<h2>Answer This Question</h2>
<div id="answers">
	<%= render :partial => @post.comments %>
</div>

<%= form_for [@answers, answer.new] do |f| %>
<p>
	<%= f.label :body, "Your Answer" %><br/>
	<%= f.text_area :body %>
</p>
<p><%= f.submit "Submit Answer" %></p>
<% end %>

