<h1>ALBUMS INDEX Page</h1>

<br />
<br />

<div class="container">

<h4>#LIST OF ALBUMS</h4>

<table class='table table-bordered'>
  <tr>
    <th>Title</th>
    <th>Text</th>
	<th>User</th>
	<th>Show</th>
    <th>Edit</th>
    <th>Destroy</th>
  </tr>
 
<% @albums.each do |album| %>
  <tr>
    <td><%= album.title %></td>
    <td><%= album.text %></td>
	<td><%= album.users %></td>
	<td><%= link_to 'Show', album %></td>
    <td><%= link_to 'Edit', edit_album_path(album) %></td>
    <td><%= link_to 'Destroy', album_path(album),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>

</table>
<br />

</div>